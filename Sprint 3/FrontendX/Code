              }}
            />
            {paymentErrors.email && <span style={{ color: '#ef4444', fontSize: '0.85rem', marginTop: '5px', display: 'block' }}>{paymentErrors.email}</span>}
          </div>

          <div style={{ marginBottom: '20px' }}>
